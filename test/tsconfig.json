{
    "compilerOptions": {
        "lib": [
            "ES2021"
        ],
        "module": "CommonJS",
        "target": "ES2021",
        "baseUrl": ".",
        "rootDir": "./src",
        "outDir": "./dist",
        "types": [
            "node"
        ],
        "incremental": true,
        "tsBuildInfoFile": "dist/.tsbuildinfo",
        "skipLibCheck": true,
        "esModuleInterop": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./node_modules",
        "./dist"
    ]
}
